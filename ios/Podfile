# ios/Podfile

require File.join(
  File.dirname(`node --print "require.resolve('expo/package.json')"`),
  "scripts/autolinking"
)
require File.join(
  File.dirname(`node --print "require.resolve('react-native/package.json')"`),
  "scripts/react_native_pods"
)

require 'json'
podfile_properties = JSON.parse(
  File.read(File.join(__dir__, 'Podfile.properties.json'))
) rescue {}

# Minimum iOS version
platform :ios, podfile_properties['ios.deploymentTarget'] || '15.1'

# Stable UUIDs for pods
install! 'cocoapods', :deterministic_uuids => false

# Prepare RN + Expo autolinking
prepare_react_native_project!

target 'Voltuoso' do
  use_expo_modules!                            # Expo modules autolinking
  config = use_native_modules!                 # React Native modules autolinking

  use_react_native!(
    :path => config[:reactNativePath],
    :hermes_enabled => true,
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  post_install do |installer|
    # Standard RN post-install adjustments
    react_native_post_install(installer, config[:reactNativePath])
    # NOTE: Removed __apply_Xcode_12_5_M1_post_install_workaround, not needed with current RN

    # Workaround for conflicting DEFINES_MODULE settings
    installer.pods_project.targets.each do |target|
      # Apply to all pods or list specific ones causing conflicts
      target.build_configurations.each do |build_cfg|
        build_cfg.build_settings['DEFINES_MODULE'] = 'YES'
      end
    end
  end

  post_integrate do |installer|
    begin
      expo_patch_react_imports!(installer)
    rescue => e
      Pod::UI.warn e
    end
  end
end
