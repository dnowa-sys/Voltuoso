{
  "expo": {
    "name": "Voltuoso",
    "slug": "voltuoso",
    "scheme": "voltuoso",
    "version": "1.0.0",
    "sdkVersion": "53.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "newArchEnabled": true,
    "userInterfaceStyle": "automatic",
    "entryPoint": "expo-router/entry",
    "plugins": [
      "expo-dev-client",
      "@react-native-firebase/app",
      "@react-native-firebase/auth",
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static"
          },
          "newArchEnabled": true
        }
      ],
      "expo-router",
      [
        "expo-maps",
        {
          "requestLocationPermission": true,
          "locationPermission": {
            "android": {
              "title": "Location Permission",
              "message": "Allow Voltuoso to access your location to show nearby charging stations.",
              "buttonPositive": "OK",
              "buttonNegative": "Cancel"
            },
            "ios": {
              "title": "Location Permission",
              "message": "Allow Voltuoso to access your location to show nearby charging stations.",
              "buttonPositive": "OK",
              "buttonNegative": "Cancel"
            }
          }
        }
      ]
    ],

    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "googleServicesFile": "./app/services/GoogleService-Info.plist",
      "bundleIdentifier": "com.dnowa.voltuoso",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSLocationWhenInUseUsageDescription": "We need your location to show nearby charging stations.",
        "NSLocationAlwaysUsageDescription": "We need your location for continuous background location tracking even when the app is in the background."
      }
    },
    "android": {
      "googleServicesFile": "./app/services/google-services.json",
      "package": "com.dnowa.voltuoso",
      "versionCode": 1,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "config": {
        "googleMaps": {
          "apiKey": "GOOGLE_CLOUD_API_KEY"
        }
      }
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    },
    "extra": {
      "GOOGLE_CLOUD_API_KEY": "GOOGLE_CLOUD_API_KEY",
      "apiUrl": "https://api.voltuoso.com",
      "eas": {
        "projectId": "51a1a865-99b4-4a64-b7b7-3726f0306ce3"
      }
    }
  }
}
