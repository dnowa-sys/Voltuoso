{
  "expo": {
    "name": "Voltuoso",
    "slug": "Voltuoso",
    "scheme": "voltuoso",
    "version": "1.0.0",
    "sdkVersion": "53.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "userInterfaceStyle": "automatic",
    "entryPoint": "expo-router/entry",

  
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },

    "assetBundlePatterns": ["**/*"],
    "plugins": [
      "expo-router"
    ],

    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.dnowa.Voltuoso",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSLocationWhenInUseUsageDescription": "We need your location to show nearby charging stations.",
        "NSLocationAlwaysUsageDescription": "We need your location for continuous background location tracking to show nearby stations even when the app is in the background."
      }
    },

    "android": {
      "package": "com.dnowa.Voltuoso",
      "versionCode": 1,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },

    "web": {
      "favicon": "./assets/images/favicon.png"
    },

    "extra": {
      "eas": {
        "projectId": "c66927be-5943-4db9-9661-ebf03f44ff53"
      },
      "apiUrl": "https://api.voltuoso.com"
    }
  }
}
